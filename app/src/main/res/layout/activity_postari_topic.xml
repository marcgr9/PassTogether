<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostariTopic">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:id="@+id/review"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:id="@+id/buttonAddPost"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content"
        android:text="Adauga Postare"
        />
    <com.google.android.material.circularreveal.CircularRevealRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/createPost"
        android:visibility="invisible"
        android:gravity="center_horizontal"
        android:background="#ABC4E7"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="5dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputTitlu"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:hint="Titlu Postare"/>
        <com.google.android.material.textfield.TextInputEditText
            android:layout_marginTop="20dp"
            android:id="@+id/inputDescriere"
            android:hint="Descriere Postare"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_below="@+id/inputTitlu"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonPoze"
            android:text="Add Poza"
            android:layout_below="@+id/inputDescriere"
            android:layout_marginTop="30dp"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/buttonPoze"
            android:layout_below="@+id/inputDescriere"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"/>


    </com.google.android.material.circularreveal.CircularRevealRelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>